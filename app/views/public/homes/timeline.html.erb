<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3">タイムライン</h1>
    <div class="container">
      <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-7 offset-md-2">
          <table class="table mt-4">
            <tbody>
              <% @posts.each do |post| %>
                <tr class="d-flex">
                  <td><%= link_to image_tag post.get_post_image(200, 200) %></td>
                  <td><%= link_to post.cook_name, post_path(post), class: "text-dark font-weight-bold" %></td>
                  <td>
                    <%= render 'public/posts/static_star', post: post %>
                  </td>
                  <td><%= post.opinion %></td>
                  <td>
                    <% if post.customer == current_customer %>
                      <%= link_to "編集", edit_post_path(post), class: 'btn btn-success' %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="mt-4 mb-4 justify-content-center d-flex">
      <%= paginate @posts %>
    </div>
</div>