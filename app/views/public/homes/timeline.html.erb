<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><strong>タイムライン</strong></h1>
</div>
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <h3 class="my-profile"><strong>プロフィール</strong></h3>
      <div class="content">
        <div class="wrap" style="display: flex;">
          <%= image_tag @customer.get_customer_image(250, 250), class: 'rounded-circle' %><br>
          <table class="table w-50 mt-5">
            <tbody>
              <tr>
                <th class="text-center">名前</th>
                <th><%= @customer.full_name %></th>
              </tr>
              <tr>
                <th class="text-center">得意料理</th>
                <th><%= @customer.special_dish %></th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary edit_customer_#{@customer.id}" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <div class="w-75" id='calendar'></div>
    </div>
    <div class="col-md-6 mt-3">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <div class="card-text">
              <table class="table mt-4">
                <thead>
                  <tr>
                    <th></th>
                    <th></th>
                    <th>料理名</th>
                    <th>難易度</th>
                    <th>感想</th>
                    <th>作った日</th>
                  </tr>
                </thead>
                <tbody>
                  <% @posts.each do |post| %>
                    <tr>
                      <td>
                        <%= image_tag post.customer.get_customer_image(55, 100), class: 'rounded-circle' %><br>
                        <%= post.customer.full_name %><br>
                        <%= post.created_at.strftime('%Y/%m/%d') %>
                      </td>
                      <td><%= link_to image_tag post.get_post_image(150, 150) %></td>
                      <td class="align-middle"><%= link_to post.cook_name, post_path(post), class: "text-dark font-weight-bold" %></td>
                      <td class="align-middle">
                        <%= render 'public/posts/static_star', post: post %>
                      </td>
                      <td class="align-middle"><%= post.opinion %></td>
                      <td class="align-middle"><%= post.cooked_day.strftime("%Y/%m/%d") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
      <div class="mt-4 mb-4 justify-content-center d-flex">
        <%= paginate @posts %>
      </div>
  </div>

