<% recipes.each do |recipe| %>
  <div class="card mb-1">
    <div class="card-body">
      <h3 class="card-text"><%= recipe.post.cook_name %>の作り方</h3>
      <p class="card-text mt-3">材料</p>
      <p class="card-text"><%= recipe.material %></p>
      <p class="card-text mt-3">工程</p>
      <p class="card-text"><%= recipe.content %></p>
      <% @tags.each do |tag| %>
        <p class="card-text"><%= tag.content %></p>
      <% end %>
      <p class="card-text">
        <%= link_to  post_recipe_path(@post, recipe), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </p>
    </div>
  </div>
<% end %>