<div class="container">
  <div class="row">
    <div class="col-md">
      <h1 class="mt-3 pt-3 text-center">レシピ編集</h1>
        <%= form_with model: @recipe, url: post_recipe_path(@recipe), method: :patch do |f| %>
        <div class="form-group pt-3 mt-5">
          <%= f.text_area :content, class: 'form-control', rows: 15 %>
          <%= f.submit "送信", class: 'btn btn-primary' %>
        </div>
        <% end %>
    </div>
  </div>
</div>