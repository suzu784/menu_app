<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><strong>投稿一覧</strong></h1>
     <p>
       <%= search_form_for(@search, url:posts_path) do |f| %>
  		   <%= f.search_field :cook_name_cont, placeholder:"キーワードを入力してください", size: "50" %>
  		   <%= f.submit "検索", class: 'btn btn-warning' %>
  	   <% end %>
     </p>
     <div class="container">
       <div class="row">
         <div class="col">
          <table class="table">
            <tbody>
              <% @posts_all.each do |post| %>
                <tr>
                  <th class="align-middle">料理名</th>
                  <td class="align-middle"><%= link_to post.cook_name, post_path(post) %></td>
                  <td><%= image_tag post.get_post_image(200, 200) %></td>
                </tr>
                <tr>
                  <th>難易度</th>
                  <td><%= render 'static_star', post: post %></td>
                </tr>
                <tr>
                  <th>作った日</th>
                  <td class="align-middle"><%= post.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
         </div>
       </div>
       <div class="mb-5 pb-5 justify-content-center d-flex">
         <%= paginate @posts_all %>
       </div>
     </div>
</div>