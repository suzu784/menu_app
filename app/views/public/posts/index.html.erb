<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3">投稿一覧</h1>
     <p>
       <%= search_form_for(@search, url:posts_path) do |f| %>
  		   <%= f.search_field :cook_name_cont, placeholder:"キーワードを入力してください", size: "50" %>
  		   <%= f.submit "検索", class: 'btn btn-warning' %>
  	   <% end %>
     </p>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>料理名</th>
          <th>難易度</th>
          <th>作った日</th>
        </tr>
      </thead>
      <tbody>
        <% @posts_all.each do |post| %>
          <tr>
            <td><%= image_tag post.get_post_image(200, 200) %></td>
            <td><%= link_to post.cook_name, post_path(post) %></td>
            <td>
              <%= render 'static_star', post: post %>
            </td>
            <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-4 mb-4 justify-content-center d-flex">
      <%= paginate @posts_all %>
    </div>
</div>