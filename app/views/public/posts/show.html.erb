<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><%= @post.cook_name %></h1>
   <% if @post.recipes ==  nil %>
    <p><%= link_to "レシピ作成はこちら", post_recipes_path(@post) %></p>
   <% else %>
    <p><%= link_to "レシピの詳細はこちら", post_recipe_path(@post) %></p>
   <% end %>
</div>
  <div class="container">
    <div class="row mt-5">
      <div class="col-lg-4">
        <table class="table w-100">
          <tbody>
            <tr>
              <th>難易度</th>
              <td><%= render 'static_star', post: @post %></td>
            </tr>
            <tr>
              <th>感想</th>
              <td><%= @post.opinion %></td>
            </tr>
            <tr>
              <% if @post.customer == current_customer %>
                <td><%= link_to "編集", edit_post_path(@post), class: 'btn btn-success' %></td>
                <td><%= link_to "削除", post_path(@post), method: :delete, remote: true, class: 'btn btn-danger' %></td>
              <% end %>
            </tr>
            <tr>
              <th>動画URL</th>
              <td><h7 class="text-break"><%= raw Rinku.auto_link(h(@post.media_url)) %></h7></td>
              <div class="favorite-btn<%= @post.id %>"><br>
                <span><%= render 'public/favorites/btn', post: @post %></span>
              </div>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-lg-3">
        <%= image_tag @post.get_post_image(400, 400) %>
      </div>
      <div class="col-md-3 offset-md-2">
        <h4>コメント欄</h4>
        <hr class="my-2"></hr>
        <div class="post-comments-counter">
          <%= render 'public/post_comments/counter', post: @post %>
        </div>
        <div class="post-comments-index">
          <%= render 'public/post_comments/index', post: @post %>
        </div>
        <div>
          <%= render 'public/post_comments/form', post: @post, post_comment: @post_comment %>
        </div>
      </div>
    </div>
  </div>