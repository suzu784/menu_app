<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><strong>人気投稿</strong></h1>
    <div class="container">
      <div class="row">
        <% if @popular_posts.count > 0 %>
          <table class="table">
            <tbody>
            <% @popular_posts.each do |post|%>
              <tr>
                <td class="align-middle">
                  <h5><%= link_to post.cook_name, post_path(post), class: "text-dark font-weight-bold" %></h5>
                  <p>いいね数:<%= post.favorites.count %></p>
                </td>
                <td><%= image_tag post.get_post_image(200, 200) %></td>
              </tr>
              <tr>
                <th class="bg-light">作った日</th>
                <td class="align-middle bg-light"><%= post.created_at.strftime("%Y/%m/%d") %></td>
              </tr>
              <tr>
              </tr>
            </tbody>
            <% end %>
          </table>
        <% else %>
          <h3 class="text-center">いいねされた記事はまだありません</h3>
        <% end %>
      </div>
    </div>
</div>