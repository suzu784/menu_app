<div class="text-center">
  <h1 class="w-50 mt-4 pt-4 offset-sm-3"><strong>会員詳細ページ</strong></h1>
    <div class="row">
        <div class="col-md-3 offset-md-3 mt-5">
          <%= image_tag @customer.get_customer_image(400, 400) %>
        </div>
        <div class="col-md-6 mt-5">
          <table class="table w-50">
            <tbody>
              <tr>
                <th>名前</th>
                <td><%= @customer.first_name + @customer.last_name %></td>
              </tr>
              <tr>
                <th>得意料理</th>
                <td><%= @customer.special_dish %></td>
              </tr>
              <% if @customer != current_customer %>
                <tr>
                  <th>フォロー</th>
                  <td>
                    <div class="relationship-btn_<%= @customer.id %>">
                      <%= render 'public/relationships/btn', customer: @customer %>
                    </div>
                  </td>
                </tr>
              <% end %>
                <tr>
                  <th>編集ページ</th>
                  <% if @customer == current_customer %>
                    <td><%= link_to "編集", edit_customer_path(@customer), class: 'btn btn-success' %></td>
                  <% else %>
                    <td>編集できません</td>
                  <% end %>
                </tr>
              <tr>
                <th>いいねされた投稿<br><%= @customer.favorites.count %>件</th>
                <td><%= link_to "いいね一覧", favorites_customer_path(@customer), class: 'btn btn-warning font-weight-bold' %></td>
              </tr>
              <tr>
                <th>フォロー数<br><%= @customer.followings.count %>件</th>
                <td><%= link_to "フォロー一覧",  customer_followings_path(@customer), class: 'btn btn-warning font-weight-bold' %></td>
              </tr>
              <tr>
                <th>フォロワー数<br><%= @customer.followers.count %>件</th>
                <td><%= link_to "フォロワー一覧",  customer_followers_path(@customer), class: 'btn btn-warning font-weight-bold' %></td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
</div>