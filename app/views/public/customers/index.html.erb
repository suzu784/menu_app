<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3">会員一覧</h1>
     <p>
       <%= search_form_for(@search, url:customers_path) do |f| %>
  		   <%= f.search_field :last_name_cont, placeholder:"キーワードを入力してください", size: "30" %>
  		   <%= f.submit "検索", class: 'btn btn-warning' %>
    	 <% end %>
     </p>
    <table class="table">
      <% @customers_all.each do |customer| %>
        <% if customer.last_name != "guestuser" %>
        <tbody>
          <tr>
            <th>名前</th>
              <td><%= link_to customer.full_name, customer_path(customer) %></td>
            <th>得意料理</th>
            <td><%= customer.special_dish %></td>
            <td><%= image_tag customer.get_customer_image(100, 100) %></td>
            <td><%= render 'public/chats/btn', customer: customer %></td>
          </tr>
        </tbody>
        <% end %>
      <% end %>
    </table>
  <div class="mt-4 mb-4 justify-content-center d-flex">
    <%= paginate @customers_all %>
  </div>
</div>