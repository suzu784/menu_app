<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><strong>会員一覧</strong></h1>
     <p>
       <%= search_form_for(@search, url:customers_path) do |f| %>
  		   <%= f.search_field :last_name_cont, placeholder: "キーワードを入力してください", size: "30" %>
  		   <%= f.submit "検索", class: 'btn btn-warning' %>
    	 <% end %>
     </p>
     <div class="container">
       <div class="row">
        <table class="table">
          <% @customers_all.each do |customer| %>
            <% if customer.last_name != "guestuser" %>
            <tbody>
              <tr>
                <td><%= image_tag customer.get_customer_image(200, 200) %></td>
                <td class="align-middle"><%= link_to customer.full_name, customer_path(customer), class: 'text-dark' %></td>
                <td class="align-middle"><strong>得意料理</strong>:<%= customer.special_dish %></td>
                <td class="align-middle"><%= render 'public/chats/btn', customer: customer %></td>
              </tr>
            </tbody>
            <% end %>
          <% end %>
        </table>
       </div>
     </div>
     <div class="pb-5 mb-5 justify-content-center d-flex">
       <%= paginate @customers_all %>
     </div>
</div>