<% @youtube_data.items.each do |item| %>
  <% snippet = item.snippet %>
  <div class="text-center w-50 mt-4 pt-4 offset-sm-3">
    <h1><i class="fas fa-book"></i><strong>あなたにおすすめの動画</strong></h1>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
      <iframe width="100%" height="500px" src="https://www.youtube.com/embed/<%= item.id.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
<% end %>
