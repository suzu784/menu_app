<% post.post_comments.each do |post_comment| %>
  <%= image_tag post_comment.customer.get_customer_image(50,50) %>
  <%= post_comment.customer.full_name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% if post_comment.customer == current_customer %>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true,  class: 'btn btn-danger' %><br>
  <% end %>
<% end %>
