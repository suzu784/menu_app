<div class="row">
  <div class="col-md-3">
    <%= image_tag 'misosoup.JPG', class: 'registration_image' %>
  </div>
  <div class="col-md-4 offset-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <h2 class="mt-3">新規登録フォーム</h2>
      <div class="field mt-4">
        <%= f.label :画像 %><br />
        <%= f.file_field :customer_image, autofocus: true %>
      </div>
      <div class="field mt-2">
        <%= f.label :苗字 %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :苗字（カナ） %><br />
        <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :名前（カナ） %><br />
        <%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %>
      </div>


      <div class="field">
        <%= f.label :自己紹介 %><br />
        <%= f.text_field :introduction, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>