<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><strong>新規登録</strong></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :画像 %><br />
      <%= f.file_field :customer_image, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :苗字 %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :苗字（カナ） %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :名前（カナ） %><br />
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>


    <div class="field">
      <%= f.label :自己紹介 %><br />
      <%= f.text_field :introduction, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
