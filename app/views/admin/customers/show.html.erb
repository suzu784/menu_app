<div class="text-center">
  <h1 class="w-50 mt-3 pt-3 offset-sm-3"><strong>会員詳細ページ</strong></h1>
    <%= image_tag @customer.get_customer_image(200, 200) %>
    <div class="mb-5">
        名前：<%= @customer.first_name + @customer.last_name %>
    </div>
    <div class="mb-5">
        得意料理:<%= @customer.special_dish %>
    </div>
    <% if @customer.is_deleted == false %>
      <%= link_to "退会画面", admin_customer_confirm_path(@customer) %>
    <% end %>
</div>